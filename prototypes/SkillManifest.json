{
  "$schema": "file:///C:/Projects/Repos/botbuilder-dotnet/prototypes/SkillManifest.schema-1-0-0.json",
  "$id": "SkillBot",
  "name": "Demo skill bot with dialogs",
  "version": "1.0",
  "description": "This is a demo ",
  "publisherName": "Microsoft",
  "privacyUrl": "https://myskill.com/privacy.html",
  "copyright": "Copyright (c) Microsoft Corporation. All rights reserved.",
  "license": "",
  "iconUrl": "https://myskill.com/icon.png",
  "tags": [
    "sample",
    "authentication",
    "travel"
  ],

  "endpoints":[
    {
      "serviceUrl": "http://lala1",
      "activities": [
        {"$ref": "#BookFight"},
        {"$ref": "#GetWeather"}
      ]
    },
    {
      "serviceUrl": "http://lala2",
      "activities": [
        {"$ref": "#BookFight"},
        {"$ref": "#PassThroughMessage"}
      ]
    }
  ],

  "activities": [
    {
      "$id": "#BookFight",
      "type": "Event",
      "name": "BookFlight",
      "direction": "Inbound",
      "value": { "$ref": "#/definitions/bookingInfo" },
      "resultValue": { "$ref": "#/definitions/bookingInfo" },
      "triggerModels": [
        {"$ref": "#FlightBooking"},
        {"$ref": "#FlightBooking-ES"}
      ]
    },
    {
      "$id": "#GetWeather",
      "type": "Event",
      "name": "GetWeather",
      "direction": "Inbound",
      "triggerModels": [
        {"$ref": "#FlightBooking"}
      ]
    },
    {
      "$id": "#PassThroughMessage",
      "type": "Message",
      "text": "The text I will receive",
      "value": {
        "type": "object",
        "properties": {
          "locale": {
            "type": "string",
            "description": "The current user's locale ISO code"
          }
        }
      }
    }
  ],

  "models": [
    {
      "$id": "#FlightBooking",
      "url": "http://sample.com/flightbooking.lu",
      "description": "English LU for flight booking model.",
      "locale": "en-US"
    },
    {
      "$id": "#FlightBooking-ES",
      "url": "http://sample.com/flightbooking-es.lu",
      "description": "Spanish LU for flight booking model.",
      "locale": "es-ES"
    },
    {
      "$id": "#MyAssistantDispatch",
      "url": "http://sample.com/dispatch.lu"
    }
  ],

  "definitions": {
    "bookingInfo": {
      "type": "object",
      "required": [ "origin" ],
      "properties": {
        "origin": {
          "type": "string",
          "description": "this is the origin city for the flight"
        },
        "destination": {
          "type": "string",
          "description": "this is the destination city for the flight"
        },
        "date": {
          "type": "date",
          "description": "The date for the flight in YYYY-MM-DD format"
        }
      }
    }
  }
}