
{
    "$schema": "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/form/schemas/sdk.schema",
    "$kind": "Microsoft.OnAsk",
    "condition":"!$Directions && contains(dialog.requiredProperties, 'Directions')",
    "actions": [
        {
            "$kind": "Microsoft.IfCondition",
            "condition": "contains(turn.schema.properties['Directions'].$mappings, 'utterance')",
            "actions":[
                {
                    "$kind": "Microsoft.Ask",
                    "activity": "@{AskDirections()}",
                    "expectedProperties": [
                         "utterance","Directions"
                    ]
                }
            ],
            "elseActions":[
                {
                    "$kind": "Microsoft.Ask",
                    "activity": "@{AskDirections()}",
                    "expectedProperties": [
                        "Directions"
                    ]
                }
            ]
        },
    ]
}
