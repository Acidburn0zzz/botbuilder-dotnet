
{
    "$schema": "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/form/schemas/sdk.schema",
    "$type": "Microsoft.OnAsk",
    "condition":"and(!$Bread, contains(dialog.requiredProperties, 'Bread'))",
    "actions": [
        {
            "$type": "Microsoft.IfCondition",
            "condition":"$lastExpectedProperty == 'Bread'",
            "actions":[
                {
                    "$type": "Microsoft.SendActivity",
                    "activity": "@{help(@PropertyName)}"
                }
                    
            ]
        },
        {
            "$type": "Microsoft.Ask",
            "activity": "@{AskBread()}",
            "expectedProperties": [
                "Bread"
            ]
        }
    ]
}
