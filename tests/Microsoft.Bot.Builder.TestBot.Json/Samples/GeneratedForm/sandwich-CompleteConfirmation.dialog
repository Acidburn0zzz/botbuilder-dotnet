
{
    "$schema": "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/chrimc/form/schemas/sdk.schema",
    "$kind": "Microsoft.OnAsk",
    "condition": "empty(where(dialog.requiredProperties, property, !dialog[property]))",
    "actions": [
        {
            "$kind": "Microsoft.SendActivity",
            "activity": "@{readForm()}"
        },
        {
            "$kind": "Microsoft.Ask",
            "activity": "@{confirmChange()}",
            "expectedProperties": [
                "CompleteConfirmation"
            ]
        }
    ]
}
